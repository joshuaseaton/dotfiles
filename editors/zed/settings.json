// See https://zed.dev/docs/configuring-zed for documentation.
{
  "auto_install_extensions": {
    "everforest": true,
    "git-firefly": true,
    "html": false,
    "nu": true,
    "toml": true
  },
  "autosave": "on_focus_change",
  "buffer_font_family": "IBM Plex Mono Light",
  "buffer_font_size": 16,
  "cursor_blink": false,
  "experimental.theme_overrides": {
    // For VScode Dark Plus
    "warning.background": "#1e1e1e",
    "syntax": {
      "comment": {
        "color": "#6a9955"
      },
      "comment.doc": {
        "color": "#6a9955"
      },
      "punctuation.delimiter": {
        "color": "#9cdcfe"
      }
    },
    "terminal.ansi.cyan": "#6a9fb5",
    "terminal.ansi.green": "#90a959"
  },
  "features": {
    "copilot": false
  },
  "languages": {
    "JSON": {
      "ensure_final_newline_on_save": false,
      "format_on_save": "off",
      "tab_size": 2
    },
    "JSONC": {
      "ensure_final_newline_on_save": false,
      "format_on_save": "off",
      "tab_size": 2
    }
  },
  "terminal": {
    "blinking": "off",
    "env": {
      "EDITOR": "zed --wait",
      "GIT_PAGER": "less"  // `delta` doesn't yet work here.
    },
    "shell": {
       "program": "nu"
    }
  },
  "theme": "VScode Dark Plus",
  "ui_font_size": 16,
  "wrap_guides": [80]
}