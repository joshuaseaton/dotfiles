// See https://zed.dev/docs/configuring-zed for documentation.
{
  "auto_install_extensions": {
    "git-firefly": true,
    "html": false,
    "lua": true,
    "nu": true,
    "toml": true,
    "vscode-dark-modern": true
  },
  "autosave": "on_focus_change",
  "buffer_font_family": "IBM Plex Mono Light",
  "buffer_font_size": 16,
  "cursor_blink": false,
  "preview_tabs": {
    "enabled": false
  },
  "features": {
    "copilot": false
  },
  "file_types": {
    "Git Config": [ "**/.gitconfig", "**/git/config" ],
    "JSONC": [ "**/.dotfiles/editors/vscode/*.json" ]
  },
  "languages": {
    "JSON": {
      "ensure_final_newline_on_save": false,
      "format_on_save": "off",
      "tab_size": 2
    },
    "JSONC": {
      "ensure_final_newline_on_save": false,
      "format_on_save": "off",
      "tab_size": 2
    }
  },
  "terminal": {
    "blinking": "off",
    "env": {
      "EDITOR": "zed --wait"
    },
    "shell": {
       "program": "nu"
    }
  },
  "theme": "VSCode Dark Modern",
  "ui_font_size": 16,
  "wrap_guides": [80]
}