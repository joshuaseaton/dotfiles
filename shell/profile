# A POSIX-compliant shell "profile" file intended to be used as a .zprofile,
# .bash_profile, etc.

BASHRC="${HOME}/.bashrc"
NU="${HOME}/.cargo/bin/nu"
ZSHRC="${HOME}/.zshrc"
readonly BASHRC NU ZSHRC

if [ ! -f "${NU}" ]; then
    exit
fi

# Set the PATH as configured in Nushell.
PATH="$("${NU}" --login --commands "do \$env.ENV_CONVERSIONS.PATH.to_string \$env.PATH")"
export PATH

# Source any interactive shell configuration as well for consistency.
if [ -f "${BASHRC}" ]; then
    . "${BASHRC}"
elif [ -f "${ZSHRC}" ]; then
    . "${ZSHRC}"
fi
